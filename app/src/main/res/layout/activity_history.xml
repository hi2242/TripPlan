<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 필요한 데이터 바인딩 변수나 ViewModel을 여기 선언할 수 있습니다 -->
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HistoryActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearlayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/titleArea"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.5"
                    android:gravity="center"
                    android:text="매칭상대 정보"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

<!--                <ImageView-->
<!--                    android:id="@+id/historySettingIcon"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_weight="1.5"-->
<!--                    android:src="@drawable/menu" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20sp">
                    <TextView
                        android:id="@+id/partnerNickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="매칭된 상대 -님의 정보에요!"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/partnerAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나이: 25"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/partnerNickname" />

                    <TextView
                        android:id="@+id/partnerGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:text="성별: 남자"
                        app:layout_constraintTop_toBottomOf="@id/partnerNickname"
                        app:layout_constraintStart_toEndOf="@id/partnerAge"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/partnerMbti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:text="MBTI: XXXX"
                        app:layout_constraintTop_toBottomOf="@id/partnerAge"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/partnerCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="자차 유무: 있음"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/partnerMbti"
                        app:layout_constraintTop_toBottomOf="@id/partnerGender" />

                    <TextView
                        android:id="@+id/partnerTravelPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:text="여행 기간: 2099-99-99 ~ 2099-99-99"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/partnerMbti"/>

                    <TextView
                        android:id="@+id/partnerTravelStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="여행 스타일: 자유여행"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/partnerTravelPeriod"/>

                    <TextView
                        android:id="@+id/partnerTravelExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="여행 경비: 100만원"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/partnerTravelStyle"/>

                    <TextView
                        android:id="@+id/compatibilityPercentInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="나와 매칭된 상대의 궁합도 점수는?"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/partnerTravelExpense"/>
                    <TextView
                        android:id="@+id/compatibilityPercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="-점"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        app:layout_constraintTop_toBottomOf="@id/compatibilityPercentInfo"/>

                    <ProgressBar
                        android:id="@+id/compatibilityProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        android:minHeight="20dp"
                        android:progressDrawable="@drawable/progress_bar"
                        app:layout_constraintTop_toBottomOf="@id/compatibilityPercent"/>

                    <TextView
                        android:id="@+id/compatibilityDescription2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="궁합도에 대해 설명해줄게요!"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/compatibilityProgressBar"/>

                    <TextView
                        android:id="@+id/compatibilityDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="궁합도 설명"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/compatibilityDescription2"/>

                    <TextView
                        android:id="@+id/kakaoIdDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="상대의 카톡 아이디를 확인하세요!"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/compatibilityDescription"/>

                    <TextView
                        android:id="@+id/partnerKakaoId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="카카오톡 아이디: ******"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@id/kakaoIdDescription"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


            <Button
                android:id="@+id/btnMatching"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:background="@drawable/rounded_button"
                android:text="카카오톡 아이디 확인하기"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/btnRetryMatching"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <Button
                android:id="@+id/btnRetryMatching"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_button"
                android:text="다시 매칭하기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
