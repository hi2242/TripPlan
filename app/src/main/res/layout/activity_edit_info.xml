<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 상단 바: 타이틀 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 백스페이스 버튼 -->
        <ImageButton
            android:id="@+id/btnEditInfoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/backspace"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/titleArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="개인정보 수정"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnEditInfoBack"
            app:layout_constraintBottom_toTopOf="@id/scroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"/>


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/titleArea"
            app:layout_constraintBottom_toTopOf="@id/btnEditInfo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_margin="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="이름"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/newName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:layout_gravity="bottom"
                            android:hint="@string/editNick_hint"
                            android:inputType="text"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="전화번호"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/newPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:hint="@string/editPhone_hint"
                            android:inputType="text"
                            android:paddingLeft="8dp"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="닉네임"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/newNickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:hint="@string/editNick_hint"
                            android:inputType="text"
                            android:paddingLeft="8dp"
                            android:textColorHint="#8C8C8C" />
                        <Button
                            android:id="@+id/btnCheckNickReg"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:background="@drawable/solid_button_login"
                            android:text="중복확인"
                            android:padding="1dp"
                            android:textSize="12sp"/>

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="30dp"
                            android:layout_marginLeft="8dp"
                            android:text="나이"
                            android:textColor="@color/black"
                            android:textSize="14sp"  />

                        <TextView
                            android:id="@+id/newAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="4dp"
                            android:hint="@string/etAge_hint"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="카카오톡 ID"
                            android:textColor="@color/black"
                            android:textSize="14sp"  />

                        <EditText
                            android:id="@+id/newKakaoId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:layout_gravity="bottom"
                            android:hint="@string/editKakao_hint"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="8dp"
                            android:text="MBTI"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/newMBTI"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/border_black"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="나의 MBTI"
                                android:textColor="#8C8C8C"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="8dp"
                            android:text="자차유무"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/newCar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom">

                            <RadioButton
                                android:id="@+id/radioCarYes"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="있음"
                                android:textColor="#8C8C8C"
                                android:buttonTint="#8C8C8C">
                            </RadioButton>

                            <RadioButton
                                android:id="@+id/radioCarNo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="없음"
                                android:textColor="#8C8C8C"
                                android:buttonTint="#8C8C8C">
                            </RadioButton>

                        </RadioGroup>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnEditInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/solid_button_login"
            android:fontFamily="@font/font_style"
            android:textSize="18sp"
            android:text="확인"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/scroll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
