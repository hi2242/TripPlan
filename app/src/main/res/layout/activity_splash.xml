<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainSplashActivity">

    <ImageView
        android:id="@+id/airplane"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/airplane"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/slogan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="여정으로 떠나볼까요?"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:minHeight="55dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeMinTextSize="30sp"
        android:autoSizeStepGranularity="2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/palmtree"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/palm_tree"
        app:layout_constraintBottom_toTopOf="@id/slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/traveler"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/traveler_suitcase"
        app:layout_constraintBottom_toTopOf="@id/slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/planetakeoff"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plane_takeoff"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@id/slogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>