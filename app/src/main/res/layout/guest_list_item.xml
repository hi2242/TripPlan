<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemViewInGuest"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="7dp"
    android:background="@drawable/rounded_rectangle_background"
    android:backgroundTint="#7FE4EBF0">

    <ImageView
        android:id="@+id/GuestHouse_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/circle_background"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/GuestHouse_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GuestHouse_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="숙소명"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/GuestHouse_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GuestHouse_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/GuestHouse_age"
        app:layout_constraintStart_toStartOf="@id/GuestHouse_name"
        app:layout_constraintTop_toBottomOf="@+id/GuestHouse_name" />

    <TextView
        android:id="@+id/GuestHouse_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/GuestHouse_date"
        app:layout_constraintStart_toStartOf="@id/GuestHouse_location"
        app:layout_constraintTop_toBottomOf="@+id/GuestHouse_location" />

    <TextView
        android:id="@+id/GuestHouse_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="날짜"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/GuestHouse_age" />

    <TextView
        android:id="@+id/GuestHouse_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="윤게스트하우스"
        android:textColor="#323537"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/GuestHouse_date_tv"
        app:layout_constraintTop_toTopOf="@id/GuestHouse_name" />

    <TextView
        android:id="@+id/GuestHouse_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="인천광역시"
        android:textColor="#323537"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/GuestHouse_date_tv"
        app:layout_constraintTop_toTopOf="@+id/GuestHouse_location" />

    <TextView
        android:id="@+id/GuestHouse_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="26세"
        android:textColor="#323537"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/GuestHouse_date_tv"
        app:layout_constraintTop_toTopOf="@+id/GuestHouse_age" />

    <TextView
        android:id="@+id/GuestHouse_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="2024.09.02"
        android:textColor="#323537"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toEndOf="@+id/GuestHouse_date"
        app:layout_constraintTop_toTopOf="@+id/GuestHouse_date" />
</androidx.constraintlayout.widget.ConstraintLayout>