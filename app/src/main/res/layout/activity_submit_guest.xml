<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".matematching.MateMatchingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6F6F6"
        tools:context=".matematching.MateMatchingFragment">

        <LinearLayout
            android:id="@+id/title_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게스트 메이트 신청"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/helpIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/add_circle_24"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title_linear"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_margin="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="이름"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/nameInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:layout_gravity="bottom"
                            android:hint="@string/editNick_hint"
                            android:inputType="text"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="45dp"
                            android:layout_marginLeft="8dp"
                            android:text="성별"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/genderInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@drawable/border_black"
                            android:text="성별"
                            android:layout_marginTop="3dp"
                            android:textColor="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="닉네임"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/nicknameInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:hint="@string/editNick_hint"
                            android:inputType="text"
                            android:paddingLeft="8dp"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="나이"
                            android:textColor="@color/black"
                            android:textSize="14sp"  />

                        <EditText
                            android:id="@+id/ageInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:layout_gravity="bottom"
                            android:hint="@string/editAge_hint"
                            android:inputType="number"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="카카오톡 ID"
                            android:textColor="@color/black"
                            android:textSize="14sp"  />

                        <EditText
                            android:id="@+id/kakaoInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:backgroundTint="#8C8C8C"
                            android:ems="10"
                            android:layout_gravity="bottom"
                            android:hint="@string/editKakao_hint"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="12dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="34dp"
                            android:text="여행 날짜"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/dateInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|bottom"
                            android:layout_weight="1"
                            android:background="@drawable/border_black"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="날짜"
                            android:textColor="#8C8C8C"
                            android:textStyle="bold" />
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="12dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="40dp"
                            android:text="사는 지역"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/regionInSubmit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:background="@drawable/border_black"
                                android:paddingLeft="8dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_weight="1"
                                android:text="사는 지역(도시)"
                                android:textColor="#8C8C8C" />
                            <TextView
                                android:id="@+id/regionInSubmit2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/border_black"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="사는 지역(시군구)"
                                android:textColor="#8C8C8C"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="12dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="8dp"
                            android:text="MBTI"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/MBTIInSubmit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/border_black"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="나의 MBTI"
                                android:textColor="#8C8C8C"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/prefMBTIInSubmit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/border_black"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:paddingLeft="8dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:hint="@string/editNick_hint"
                                android:text="선호 MBTI"
                                android:textColor="#8C8C8C" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="12dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView62"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="34dp"
                            android:text="선호 나이 차"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/prefAgeInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|bottom"
                            android:layout_weight="1"
                            android:background="@drawable/border_black"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="선호 나이 차"
                            android:textColor="#8C8C8C"
                            android:textStyle="bold" />
                    </FrameLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="12dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="34dp"
                            android:layout_marginLeft="8dp"
                            android:text="하우스 스타일"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/styleInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|bottom"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:background="@drawable/border_black"
                            android:paddingLeft="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="나의 하우스 스타일(최대 3개)"
                            android:textColor="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="34dp"
                            android:text="여행 경비"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <EditText
                            android:id="@+id/moneyInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:backgroundTint="#8C8C8C"
                            android:digits="0123456789"
                            android:ems="50"
                            android:hint="@string/editMoney_hint"
                            android:inputType="number"
                            android:paddingLeft="8dp"
                            android:textColorHint="#8C8C8C" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/card_matching"
                    android:elevation="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="8dp"
                            android:text="자차유무"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/carInSubmit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="있음"
                                android:textColor="#8C8C8C"
                                android:buttonTint="#8C8C8C">
                            </RadioButton>

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="없음"
                                android:textColor="#8C8C8C"
                                android:buttonTint="#8C8C8C">
                            </RadioButton>

                        </RadioGroup>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|left"
                            android:layout_marginBottom="50dp"
                            android:layout_marginLeft="8dp"
                            android:text="범죄 경력 회보서"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/criminalInSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@drawable/border_black"
                            android:text="이미지 첨부"
                            android:ems="10"
                            android:layout_marginTop="3dp"
                            android:textColor="#8C8C8C" />
                    </FrameLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/btnPrivateInfo"
                    android:layout_width="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/solid_button_login"
                    android:fontFamily="@font/font_style"
                    android:textSize="15sp"
                    android:text="개인정보 수집, 이용 안내"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <Button
                    android:id="@+id/btnMatchingInSubmit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/solid_button_login"
                    android:fontFamily="@font/font_style"
                    android:textSize="18sp"
                    android:text="신청 하기"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>