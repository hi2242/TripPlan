<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 기본 배경: 흰색 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/MediumSeaGreen"/> <!-- 배경색 -->
        </shape>
    </item>

    <!-- 위쪽 테두리: MediumSeaGreen -->
    <item android:bottom="3dp"> <!-- 아래쪽 여백을 두어 위쪽만 테두리처럼 보이게 함 -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 위쪽 테두리 색상 -->
        </shape>
    </item>
</layer-list>
